{* Latte template *}

{block content}
<div id="best">
    <p id="b-p">NEJPRODÁVANĚJŠÍ HRY</p>
    <div n:foreach="$best_games as $best" class="product">
        <a href="{plink Product:show $best->product_id}">
            <p class="p-name">{$iterations+1}. {$best->product_name|striptags}  ({$best->platform_name|striptags})</p>
            <p class="p-price">{$best->price|striptags} Kč</p>
        </a>
    </div>
</div>